# Delerium Environment Configuration
# Copy this file to .env and update with your values

# REQUIRED: Secret pepper for deletion token hashing
# Generate with: openssl rand -hex 32
DELETION_TOKEN_PEPPER=your-secret-pepper-here

# Optional: Domain for SSL/TLS
DOMAIN=paste.example.com

# Optional: Email for Let's Encrypt
LETSENCRYPT_EMAIL=admin@example.com

# Optional: Grafana admin password (used with docker-compose.monitoring.yml)
# IMPORTANT: Change this in production!
GRAFANA_ADMIN_PASSWORD=changeme

