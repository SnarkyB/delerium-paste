# Delerium Environment Configuration
# Copy this file to .env and update with your values

# REQUIRED: Secret pepper for deletion token hashing
# Generate with: openssl rand -hex 32
DELETION_TOKEN_PEPPER=your-secret-pepper-here

# Optional: Domain for SSL/TLS
DOMAIN=paste.example.com

# Optional: Email for Let's Encrypt
LETSENCRYPT_EMAIL=admin@example.com

# Metrics Authentication (required if using monitoring profile)
# Generate with: openssl rand -hex 16
METRICS_USER=metrics
METRICS_PASS=your-metrics-password-here
