{
  "name": "zkpaste-client",
  "version": "1.0.0",
  "description": "Client-side TypeScript for zkpaste",
  "scripts": {
    "build": "npx tsc",
    "watch": "npx tsc --watch",
    "typecheck": "npx tsc --noEmit",
    "eslint": "npx eslint src/**/*.ts",
    "eslint:fix": "npx eslint src/**/*.ts --fix",
    "lint": "npm run eslint",
    "lint:fix": "npm run eslint:fix",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "test:coverage": "npx jest --coverage",
    "test:unit": "npx jest --testPathIgnorePatterns=/integration/ --testPathIgnorePatterns=/e2e/",
    "test:integration": "npx jest --config jest.integration.config.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^2.0.16",
    "eslint": "^9.15.0",
    "express": "^4.21.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.6",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  }
}
